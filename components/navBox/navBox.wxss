/* 新闻分类导航 */
.scroll {
  width: 100%;
  white-space: nowrap;
  /* 不换行*/
  border-bottom: solid 1px #4b4747;
  height: 150rpx;
}
.scroll view {
  height: 150rpx;
  position: static;
  text-align: center;
  justify-content: center;
  font-size: 45rpx;
  width: 100rpx;
  display: inline-block;
  /* 块级行元素 */
  margin: 10rpx 10rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
