/* 新闻分类导航 */
.scroll {
  width: 100%;
  /* 不换行*/
  white-space: nowrap;
  border-bottom: solid 1rpx rgb(175, 172, 172);
  height: 80rpx;
}
.scroll view {
  height: 100%;
  position: static;
  text-align: center;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  width: 100rpx;
  /* 块级行元素 */
  display: inline-block;
  margin: 10rpx 10rpx;
}

/* 去除滚动功能中的滚条 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
